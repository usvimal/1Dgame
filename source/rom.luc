module rom (
    input clk,  // clock
    input rst,  // reset
    input player_row[4],
    output out[8][16]
  ) {
  
  const FIXED_GAME = {16b1000100001000010,
    16b1001100001000011,
    16b1000100111000010,
    16b1000100001000010,
    16b0000100001000010,
    16b1000111111000010,
    16b1000100001000010,
    16b1000100001000010,
    16b1000100001000010,
    16b1000100001000010,
    16b1000100001000010,
    16b1000100001000010,
    16b0000100000010000,
    16b1111111111111111};
  var i;
  
  always {
    
    for(i=0; i<8; i++) {
      out[i] = FIXED_GAME[player_row+i];
    }
  }
}